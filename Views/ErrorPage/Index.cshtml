@{
    ViewData["Title"] = "Erro";
    var errorMessage = ViewBag.ErrorMessage ?? "Erro desconhecido";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Erro</title>
    <link rel="stylesheet" href="~/css/NeoAuth.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        /* Customizações para a página de erro */
        body {
            background-color: var(--bg-page);
        }

        .error-card {
            background-color: var(--bg-card);
            border-radius: 16px;
            box-shadow: 0 8px 20px var(--shadow-card);
            padding: 2rem;
            width: 450px;
            text-align: center;
            animation: fadeInUp 0.8s ease forwards;
        }

            .error-card h1 {
                color: var(--error-color);
                font-size: 3rem;
                margin-bottom: 1rem;
                animation: bounce 2s infinite;
            }

            .error-card p {
                font-size: 1.1rem;
                color: var(--text-color);
            }

            .error-card hr {
                margin: 1.5rem 0;
                border-color: var(--shadow-card);
            }

        .btn-error {
            background-color: var(--error-color);
            border: none;
            color: #fff;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: background-color var(--transition-speed), transform var(--transition-speed);
        }

            .btn-error:hover {
                background-color: #c91f1f;
                transform: translateY(-2px);
            }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100%

        {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-15px);
        }

        60% {
            transform: translateY(-8px);
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <div class="error-card">
            <h1><i class="fa-solid fa-triangle-exclamation"></i> Erro!</h1>
            <p>Entre em contato com o Administrador ou Desenvolvedor do Sistema</p>
            <hr>
            <p><strong>Motivo do Erro:</strong> @errorMessage</p>
            <a href="/" class="btn btn-error mt-3"><i class="fa-solid fa-arrow-left me-1"></i> Voltar para Início</a>
        </div>
    </div>
</body>
</html>
