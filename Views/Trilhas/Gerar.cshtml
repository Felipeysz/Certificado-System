@model AuthDemo.Services.TrilhaDetalhesDto

@{
    ViewData["Title"] = "Gerar Certificados - " + Model.Nome;
}

@section Styles {
    <link href="~/css/Trilhas/GerarTrilha.css" rel="stylesheet" />
    <link href="~/css/ThemaVarieble.css" rel="stylesheet" />
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient-success text-white py-4">
                    <h2 class="mb-0 text-center">
                        <i class="fas fa-graduation-cap"></i> @Model.Nome
                    </h2>
                    <p class="text-center mb-0 mt-2">
                        Obtenha todos os certificados desta trilha
                    </p>
                </div>

                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.Descricao))
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> @Model.Descricao
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="fas fa-exclamation-triangle"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Certificados da Trilha -->
                    <div class="mb-4">
                        <h5 class="mb-3">
                            <i class="fas fa-list"></i> Certificados Inclusos:
                        </h5>
                        <div class="list-group">
                            @foreach (var cert in Model.Certificados)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex align-items-center">
                                        <div class="icon-circle bg-success text-white me-3">
                                            <i class="fas fa-certificate"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1 fw-bold">@cert.NomeCurso</h6>
                                            <small class="text-muted">
                                                <i class="fas fa-clock"></i> @cert.CargaHoraria horas
                                                @if (!string.IsNullOrEmpty(cert.NomeInstituicao))
                                                {
                                                    <span class="ms-2">
                                                        | <i class="fas fa-building"></i> @cert.NomeInstituicao
                                                    </span>
                                                }
                                            </small>
                                        </div>
                                        <div>
                                            <i class="fas fa-check-circle text-success fa-2x"></i>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="mt-3 text-center">
                            <span class="badge bg-success fs-5 py-2 px-4">
                                <i class="fas fa-award"></i>
                                Total: @Model.Certificados.Count certificado(s)
                            </span>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Formulário -->
                    <form method="post" id="formGerar">
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label for="nomeAluno" class="form-label fw-bold fs-5">
                                <i class="fas fa-user"></i> Seu Nome Completo:
                            </label>
                            <input type="text"
                                   name="nomeAluno"
                                   id="nomeAluno"
                                   class="form-control form-control-lg"
                                   placeholder="Ex: João da Silva Santos"
                                   required
                                   autocomplete="name" />
                            <div class="form-text">
                                <i class="fas fa-lightbulb"></i>
                                Este nome será inserido em TODOS os certificados desta trilha
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg" id="btnGerar">
                                <i class="fas fa-download"></i> Gerar Meus Certificados
                            </button>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="@Url.Action("Publicas")" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left"></i> Ver Todas as Trilhas
                                </a>
                            }
                        </div>
                    </form>

                    <!-- Loading -->
                    <div id="loadingSpinner" class="text-center mt-4" style="display: none;">
                        <div class="spinner-border text-success" style="width: 4rem; height: 4rem;">
                            <span class="visually-hidden">Processando...</span>
                        </div>
                        <p class="mt-3 text-muted fw-bold fs-5">
                            <i class="fas fa-cogs"></i> Gerando seus certificados...
                        </p>
                        <p class="text-muted">
                            Por favor, aguarde. Estamos processando @Model.Certificados.Count certificado(s).
                        </p>
                    </div>
                </div>
            </div>

            <!-- Card de Instagram -->
            <div class="instagram-card mt-4">
                <div class="instagram-icon">
                    <i class="fab fa-instagram"></i>
                </div>
                <h5 class="instagram-title">
                    <i class="fas fa-gift"></i> Ganhe um Presentinho!
                </h5>
                <p class="instagram-text">
                    Parabéns por terminar esta trilha! 🎉
                    <br><br>
                    Se você enviar a foto dos certificados no Instagram
                    <a href="https://instagram.com/expertacademypro"
                       target="_blank"
                       rel="noopener noreferrer"
                       class="instagram-link">
                        @@expertacademypro
                    </a>
                    irei te dar um presentinho. ❤️
                </p>
                <div class="instagram-examples">
                    <strong>💡 Exemplos de envio:</strong>
                    <ul>
                        <li>Certificados no quadro</li>
                        <li>Certificados na parede</li>
                        <li>Segurando os certificados</li>
                        <li>Use sua criatividade!</li>
                    </ul>
                </div>
                <p class="instagram-cta">
                    Basta postar e marcar a gente, conto com você! 🚀
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('formGerar').addEventListener('submit', function(e) {
            const nomeAluno = document.getElementById('nomeAluno').value.trim();

            if (!nomeAluno) {
                e.preventDefault();
                alert('⚠️ Por favor, informe seu nome completo.');
                document.getElementById('nomeAluno').focus();
                return;
            }

            // Mostra loading
            document.getElementById('loadingSpinner').style.display = 'block';
            document.getElementById('btnGerar').disabled = true;
            document.getElementById('btnGerar').innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processando...';

            // Scrolla para o loading
            document.getElementById('loadingSpinner').scrollIntoView({ behavior: 'smooth', block: 'center' });
        });
    </script>
}